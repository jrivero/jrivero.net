---
import BaseLayout from '@/layouts/BaseLayout.astro'
---

<BaseLayout title="404 - Not Found" description="404 Error — esta página no existe">
  <div class="mt-32 flex flex-col items-center justify-center px-8">
    <p class="text-sm text-muted-foreground">404</p>
    <h1 class="scroll-m-20 text-4xl font-extrabold tracking-tight lg:text-5xl">Pagina no encontrada</h1>
    <p class="mb-4 leading-7 [&:not(:first-child)]:mt-6">Lo siento, la página que buscas no existe.</p>
    <a href="/" rel="noreferrer">Volver</a>
  </div>
</BaseLayout>
