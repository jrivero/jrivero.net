---
import HeadSEO from "@/components/HeadSEO.astro";
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import "@/styles/global.css";

import "@fontsource-variable/jost";

interface Props {
	title?: string | undefined;
	description?: string | undefined;
	author?: string | undefined;
	ogImage?: URL | undefined;
}

const { title, description, author, ogImage } = Astro.props;
---

<html lang="es">
	<head>
		<HeadSEO
			title={title}
			description={description}
			author={author}
			ogImage={ogImage}
		/>
	</head>
	<body class="bg-black font-sans text-zinc-100 antialiased min-h-screen">
		<div
			class="max-w-4xl mx-auto border-x border-zinc-800 min-h-screen flex flex-col"
		>
			<Header />
			<main class="grow p-8">
				<slot />
			</main>
			<Footer />
		</div>
	</body>
</html>
