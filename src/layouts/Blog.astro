---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { title } = Astro.props.frontmatter || Astro.props;
---
<html lang="es">
  <head>
    <BaseHead title={title} />
  </head>
  <body>
    <Header />
    <main>
      <article>
        <h1>{title}</h1>
        <slot />
      </article>
    </main>
    <Footer />
  </body>
</html>
